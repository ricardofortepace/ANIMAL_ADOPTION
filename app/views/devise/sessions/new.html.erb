<div class="form-container">
    <div class="form-content">
      <h2>sign in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class:"simple_form") do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "login" %>
        </div>
      <% end %>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "forgot your password?", new_password_path(resource_name), class: "link-below" %><br />
      <% end %>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "sign up", new_registration_path(resource_name), class: "link-below" %><br />
      <% end %>


    </div>
</div>
