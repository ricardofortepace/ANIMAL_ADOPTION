<div class="container-geral">
  <div class="container">
    <div class="row">

      <h2 class="tit-sign-up">sign in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class:"simple_form") do |f| %>
        <div class="form-inputs">
          <div class="container-sign-in">
            <div class="">

              <%= f.input :email,
                          placeholder: 'your email here',
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          placeholder: 'minimum of 6 characters',
                          required: false,
                          input_html: { autocomplete: "current-password" } %>

              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "forgot your password?", new_password_path(resource_name), class: "link-below" %><br />
              <% end %>

              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?   %>
              <%= f.button :submit, "login", class:"col-12 button-mg mb-3" %>
            </div>

        <% end %>

        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "do you mean to sign up?", new_registration_path(resource_name), class: "link-below" %><br />
        <% end %>

      </div>
    </div>
  </div>
</div>
