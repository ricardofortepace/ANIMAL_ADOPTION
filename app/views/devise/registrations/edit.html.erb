<div class="container-geral">
  <div class="container">
    <div class="row">

        <h2 class="tit-sign-up">edit <%= resource_name.to_s.humanize.downcase %></h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

            <div class="container-sign-up">
              <div class="col-5">
                <%#= f.input :email, required: true, autofocus: true %>
                  <%# if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <%#<p>Currently waiting confirmation for: <%= resource.unconfirmed_email %>
                  <%# end %>
                  <%= f.input :name,
                            placeholder: 'full name',
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "name" }%>
                  <%= f.input :photo, as: :file %>
                  <%= f.input :address,
                                input_html: { data: { geocoder_target: "address" }, class: "d-none" },
                                wrapper_html: { data: { controller: "geocoder",
                                geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
                </div>
                <div class="col-5">
                  <%= f.input :password,
                    placeholder: "leave it blank if you don't want to change it",
                    required: false, label: "new password",
                    input_html: { autocomplete: "new-password" } %>
                  <%= f.input :password_confirmation,
                              placeholder: "leave it blank if you don't want to change it",
                              required: false, label: "new password confirmation",
                              input_html: { autocomplete: "new-password" } %>
                  <%= f.input :current_password,
                              required: true,
                              input_html: { autocomplete: "current-password" } %>
                </div>
              </div>
              <%= f.button :submit, "save your changes", class:"col-12 button-mg" %>
              <%= link_to "delete my account", registration_path(resource_name), data: { confirm: "are you sure?" }, method: :delete, class:"btn-delete"  %>



          </div>
        <% end %>

    </div>
  </div>
</div>
