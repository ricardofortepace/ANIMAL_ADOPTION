<div class="container-geral">
  <div class="container">
    <div class="row">

        <h2 class="tit-sign-up">sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

                <div class="container-sign-up">
                  <div class="col-5">
                    <%= f.input :email,
                                placeholder: 'your email here',
                                required: true,
                                autofocus: true,
                                input_html: { autocomplete: "email" }%>
                    <%= f.input :password,
                                placeholder: 'minimum of 6 characters',
                                required: true,
                                input_html: { autocomplete: "new-password" } %>
                    <%= f.input :password_confirmation,
                                placeholder: 'minimum of 6 characters',
                                required: true,
                                input_html: { autocomplete: "new-password" } %>

                  </div>
                  <div class="col-5">
                    <%= f.input :name,
                                placeholder: 'full name',
                                required: true,
                                autofocus: true,
                                input_html: { autocomplete: "name" }%>
                    <%= f.input :photo, :label => "photo (optional)", as: :file %>
                    <%= f.input :address, :label => "address (optional)",
                                input_html: { data: { geocoder_target: "address" }, class: "d-none", id: "search-item" },
                                wrapper_html: { data: { controller: "geocoder",
                                geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
                  </div>
                </div>
              <%= f.button :submit, "sign up", class:"col-12 button-mg" %>
            </div>
        <% end %>

        <%- if controller_name != 'sessions' %>
        <%= link_to "do you mean to login?", new_session_path(resource_name), class: "link-below" %><br />
        <% end %>

    </div>
  </div>
</div>
