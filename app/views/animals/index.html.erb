  <div class="filterbar">

        <%= form_with url: animals_url, class: "filterbar-margin", method: :get do |f|%>


          <div class="field-pet">
            <div class="separation">
              <%= f.check_box :specie_dog, class: "form-check-input mt-2" %>
              <%= f.label :specie_dog, 'doggo', class: "mx-2" %>

              <%= f.check_box :specie_cat, class: "form-check-input mt-2" %>
              <%= f.label :specie_cat, 'pussy cat', class: "mx-2" %>

              <%= f.check_box :gender_male, class: "form-check-input mt-2" %>
              <%= f.label :gender_male, 'male', class: "mx-2" %>

              <%= f.check_box :gender_female, class: "form-check-input mt-2" %>
              <%= f.label :gender_female, 'female', class: "mx-2" %>

              <%= f.check_box :castrate, class: "form-check-input mt-2" %>
              <%= f.label :castrate, 'castrated', class: "mx-2" %>

              <%= f.check_box :castrate, class: "form-check-input mt-2" %>
              <%= f.label :castrate, 'uploaded by me', class: "mx-2" %>
            </div>


            <div class="separation">
              <%= f.text_field :description,
                  class: "form-control",
                  placeholder: "behavior, size, colour, and other qualities"%>
                  <%= f.submit "this a good boy?", class: "btn-small" %>
            </div>
          </div>

          <div class="field-pet">
            <%= f.text_field :address,
              class: "form-control",
              placeholder: "my current address"%>

            <%= f.check_box :user_address, class: "form-check-input" %>
            <%= f.label :user_address, 'my homeplace 🏠' %>

            <%= f.range_field :range, min: 0, max: 200, step: 1, class: "range-style"%>
            <%= f.label :range, "range within max. 200 km", class: "btn-small" %>
            <%= f.submit "go catch!", class: "btn-small" %>

          </div>
          <% end %>

       </div>
    </div>
  </div>









<div class="container-animals">
  <div class="row">
    <div class="cards my-4">
      <% @animals.each do |animal| %>
        <%= link_to animal do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= animal.photos.attached? ? cl_image_path(animal.photos.first.key) : 'https://img.freepik.com/free-vector/adopt-pet-concept_23-2148523582.jpg' %>)">
          <p class= "detail">genre: <span class="detail-plus"><%= animal.genre%></span> | <span class="detail-plus">age: <%= animal.age%></p></span>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
